<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.termproject.MainActivity">

    <TextView
        android:text="My Life-Logger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="44dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <Button
        android:text="Statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Statistics"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/MyLocation"
        android:layout_alignStart="@+id/MyLocation" />

    <Button
        android:text="DB record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Statistics"
        android:layout_alignLeft="@+id/Statistics"
        android:layout_alignStart="@+id/Statistics"
        android:layout_marginTop="33dp"
        android:id="@+id/DBrecord" />

    <Button
        android:text="DB Initialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DBrecord"
        android:layout_alignLeft="@+id/DBrecord"
        android:layout_alignStart="@+id/DBrecord"
        android:layout_marginTop="39dp"
        android:id="@+id/DBinitialization" />

    <Button
        android:text="MyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyLocation"
        android:layout_above="@+id/Statistics"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="28dp" />
</RelativeLayout>
